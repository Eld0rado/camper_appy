{% extends 'base.html.twig' %}

{% block title %}Hello CampingController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 950px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.all {
			display: flex;
			flex-wrap: wrap;
			justify-content: space-around;
		}
		.card {
			box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
			transition: 0.3s;
			width: 30%;
			background-color: #ff710063;
			display: inline-block;
			vertical-align: middle;
			text-align: center;
			margin-bottom: 5px;
			min-width: 250px;
			border-radius: 35px;
		}

		.card:hover {
			box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
		}

		.container {
			padding: 2px 16px;
		}
		img {
			border-radius: 5px 5px 0 0;
		}
	</style>

	<div class="example-wrapper">
		<h2>Hello
			{{ controller_name }}! âœ…</h2>


		<div class="all">
			{% for camp in list %}
				<div class="card">
					<h4 class="">
						{{camp.nomCamping}}
					</h4>
					<img src="img/camp.jpg" alt="Avatar" style="width:100%">

					<div class="container">
						<div class="">{{camp.information}}</div>
						<div class="">{{camp.secteur}}</div>
						<div>
							<button type="button">Ajouter</button>
						</div>
					</div>
				</div>

			{% endfor %}
		</div>

		{# {{ dump(list) }} #}
	</div>
{% endblock %}
