			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="example-wrapper">
		<h3>{{controller_name}}</h3>


		{{ form_start(formCamp) }}
		{{ form_widget(formCamp.nomCamping) }}
		{{ form_widget(formCamp.nbBungalow) }}
		{{ form_widget(formCamp.information ) }}
		{{ form_widget(formCamp.submit) }}
		{{ form_end(formCamp) }}
	</div>
{% endblock %}
