{% extends 'base.html.twig' %}

{% block title %}DetailCamping!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 950px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="example-wrapper">
		<div class="all">
			{% for detail in camping %}
				<div
					class="card">
					{# <h2>{{detail.nomCamping}}</h2> #}
					<div class="container">
						<div class="">
							{{ detail.name}}</div>
						<div class="">{{ detail.description}}</div>
						<div class="">Lieu :
							{{ detail.city | default('Inconnu')}}</div>
						<div class="">
							Nb de Bungalows :
							{{ detail.bungalows.total}}</div>
						<div class="">
							Nb de Bungalows dispo :
							{{ detail.bungalows.available}}
							{% if detail.bungalows.available >= 1 %}
								<button>Réserver</button>
							{% endif %}
						</div>
						<div class="">
							Nb de Tentes :
							{{ detail.tentPlaces.total}}</div>
						<div class="">Nb de Tentes dispo :
							{{ detail.tentPlaces.available}}
							{% if detail.tentPlaces.available >= 1 %}
								<button>Réserver</button>
							{% endif %}
						</div>
						<div class="">Nb de places de camping-car :
							{{ detail.campingcarPlaces.total}}</div>
						<div class="">Nb de places de camping-car dispos :
							{{ detail.campingcarPlaces.available}}
							{% if detail.campingcarPlaces.available >= 1 %}
								<button>Réserver</button>
							{% endif %}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
