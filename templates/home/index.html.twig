{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		fieldset {
			background-color: #f0e6d3;
			padding: 25px;
		}
	</style>

	<div class="example-wrapper">
		<h2>
			{{ controller_name }}</h2>

		<div class="all">
			{% for infos in data %}

				<div class="card">
					<div class="container">
						<h3>Lieu :
							{{infos.0}}</h3>
						<h3>{{infos.1}}</h3>
						<a href="{{path('camp_detail', {'id' :infos.2 } )}}">
							<button>
								Plus d'infos</button>
						</a>

					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
